<main class="container mt-5">
  <section id="companies" class="bg-light">
    <div class="list-nav d-flex justify-content-between pt-3 px-3">
      <h3>精選公司</h3>
      <a href="/companies" class="link-primary">更多公司</a>
    </div>
    <div class="row row-cols-1 row-cols-md-5 g-3 m-2 pb-3">
      <% @companies.each do |company| %>
      <div class="col">
        <a href="/companies/<%= company.id %>" class="card-link">
          <div class="card" style="height: 10rem;">
            <div class="card-body d-flex justify-content-center align-items-center">
              <h5 class="card-title"><%= company.name %></h5>
            </div>
          </div>
        </a>
      </div>
      <% end %>
    </div>
  </section>
    <section id="jobs" class="bg-light">
    <div class="list-nav d-flex justify-content-between pt-3 px-3">
      <h3>精選職缺</h3>
      <a href="/jobs" class="link-primary">更多職缺</a>
    </div>
    <div class="row row-cols-1 row-cols-md-5 g-3 m-2 pb-3">
      <% @jobs.each do |job| %>
      <div class="col">
        <a href="/companies/<%= job.company_id %>/jobs/<%= job.id %>" class="card-link">
          <div class="card" style="height: 10rem;">
            <div class="card-body d-flex justify-content-center align-items-center">
              <h5 class="card-title"><%= job.title %></h5>
            </div>
          </div>
        </a>
      </div>
      <% end %>
    </div>
  </section>
</main>